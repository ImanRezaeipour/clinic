@model Clinic.Core.Models.ProductBuy.ProductBuyCreateViewModel
@{
    Layout = MVC.Shared.Views.MasterTemplates._Layout;
    ViewBag.Title = "افزودن محصول فروشنده";
    ViewBag.Section = "ProductBuy";
    ViewBag.Name = "ProductBuyNew";
}
<form id="newProductBuy" action="@Url.Action(MVC.ProductBuy.Create())" method="post">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin>
                    @Html.ValidationSummary()
                    <div class="uk-width-medium-1-3">
                        <label>محصول</label>
                        <div class="k-rtl">
                            <div id="treeProductBuyContainer"></div>
                        </div>
                        <input type="hidden" id="ProductId" name="ProductId" data-val="true" data-val-required="vv"/>
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>تعداد خریداری شده</label>
                        <input type="text" id="BoughtCount" name="BoughtCount" class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>قیمت</label>
                        <input type="text" id="UnitPrice" name="UnitPrice" class="md-input"/>
                    </div>

                    <select id="SellerId" name="SellerId" data-on-load="prepareProductSellerList" data-val="true" data-val-required="لطفا وارد کنید">
                    </select>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-6">
                        <button type="submit" form="newProductBuy" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light">ذخیره</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>