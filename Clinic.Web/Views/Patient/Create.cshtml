@model Clinic.Core.Models.Patient.PatientCreateViewModel
@{
    Layout = MVC.Shared.Views.MasterTemplates._Layout;
    ViewBag.Title = "افزودن بیمار";
    ViewBag.Section = "Patient";
    ViewBag.Name = "PatientNew";
}
<form id="newPatient" action="@Url.Action(MVC.Patient.Create())" method="post">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>کد ملی</label>
                        <input type="text" id="NationalCode" name="NationalCode" data-val-trigger="input"  data-val-required="true" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-6">
                        <button type="button" onclick="isExistNationalCode()" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light">چک کردن کدملی</button>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label for="FirstName">نام</label>
                        <input type="text" id="FirstName" name="FirstName" data-val-trigger="input" data-val-required="true" class="md-input"/>
                        <span class="md-input-danger"></span>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>نام خانوادگی</label>
                        <input type="text" id="LastName" name="LastName" data-val-trigger="input" data-val-required="true" class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>نام پدر</label>
                        <input type="text" id="FatherName" name="FatherName" class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>شماره شناسنامه</label>
                        <input type="text" id="CertificateCode" name="CertificateCode" data-val-trigger="input" data-val-required="true" class="md-input"/>
                    </div>

                    <div class="uk-width-medium-1-3 form-field">
                        <label>تاریخ تولد</label>
                        <input type="text" id="BirthDayOn" name="BirthDayOn" data-on-click="showDatePicker" class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>محل تولد</label>
                        <input type="text" id="BirthDayPlace" name="BirthDayPlace"  class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>شماره موبایل</label>
                        <input type="text" id="MobileNumber" name="MobileNumber" data-val-type="digits" class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>شماره تلفن</label>
                        <input type="text" id="PhoneNumber" name="PhoneNumber" class="md-input"/>
                    </div>
                    <div class="uk-width-medium-1-3 form-field">
                        <label>توضیحات</label>
                        <textarea id="Description" name="Description" class="md-input"></textarea>
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-6">
                        <button type="submit" form="newPatient" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light">ذخیره</button>
                    </div>
                    <div class="uk-width-medium-1-6">
                        <button type="submit" form="newPatient" class="md-btn md-btn-default md-btn-wave-light waves-effect waves-button waves-light">ذخیره و ایجاد پرونده</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
