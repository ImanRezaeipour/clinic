@using System.Web.Optimization
@model Clinic.Core.Models.Account.LoginViewModel
@{
    Layout = null;
}
<!doctype html>
<!--[if lte IE 9]> <html class="lte-ie9" lang="en" dir="rtl"> <![endif]-->
<!--[if gt IE 9]><!-->
<html lang="en" dir="rtl">
 <!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="msapplication-tap-highlight" content="no" />

    <link rel="icon" type="image/png" href="~/Bundles/Vendors/altair/assets/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="~/Bundles/Vendors/altair/assets/img/favicon-32x32.png" sizes="32x32">

    <title>کلینیک | ورود</title>
    @Styles.Render("~/bundles/styles/css")
    <link href="~/Bundles/Vendors/altair/assets/css/login_page.min.css" rel="stylesheet" />
</head>
<body class="login_page">

    <div class="login_page_wrapper">
        <div class="md-card" id="login_card">
            <div class="md-card-content large-padding" id="login_form">
                <div class="login_heading">
                    <div class="user_avatar"></div>
                </div>
                <form id="login" action="@Url.Action(MVC.Account.SignIn())" method="post">
                    @Html.AntiForgeryToken()
                    <div class="uk-form-row">
                        <label for="UserName">نام کاربری</label>
                        <input class="md-input" type="text" id="UserName" name="UserName" />
                    </div>
                    <div class="uk-form-row">
                        <label for="Password">کلمه عبور</label>
                        <input class="md-input" type="password" id="Password" name="Password" />
                    </div>
                    <div class="uk-margin-medium-top">
                        <button type="submit" form="login" class="md-btn md-btn-primary md-btn-block md-btn-large">ورود</button>
                    </div>
                    <div class="uk-margin-top">
                        <span class="icheck-inline">
                            <input type="checkbox" name="RememberMe" id="RememberMe" data-md-icheck />
                            <label for="RememberMe" class="inline-label">مرا به یاد داشته باش</label>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts/js")
    <script src="~/Bundles/Vendors/altair/assets/js/pages/login.min.js"></script>
    <script>
        // check for theme
        if (typeof(Storage) !== "undefined") {
            var root = document.getElementsByTagName( 'html' )[0],
                theme = localStorage.getItem("altair_theme");
            if(theme == 'app_theme_dark' || root.classList.contains('app_theme_dark')) {
                root.className += ' app_theme_dark';
            }
        }
    </script>
</body>
</html>
