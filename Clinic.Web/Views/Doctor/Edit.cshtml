@model Clinic.Core.Models.Doctor.DoctorEditViewModel
@{
    Layout = MVC.Shared.Views.MasterTemplates._Layout;
    ViewBag.Title = "ویرایش اطلاعات پزشک";
    ViewBag.Section = "Doctor";
    ViewBag.Name = "DoctorList";
}
<form id="editDoctor" action="@Url.Action(MVC.Doctor.Edit())" method="post">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-3">
                        <label>کد نظام پزشکی</label>
                        <input type="text" id="MedicalCode" name="MedicalCode" value="@Model.MedicalCode" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>نام</label>
                        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>نام خانوادگی</label>
                        <input type="text" id="LastName" name="LastName" value="@Model.LastName" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>شماره ثابت</label>
                        <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>شماره همراه</label>
                        <input type="text" id="MobileNumber" name="MobileNumber" value="@Model.MobileNumber" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>توضیحات</label>
                        <input type="text" id="Description" name="Description" value="@Model.Description" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <select id="ExpertiseId" name="ExpertiseId" data-val="true" data-val-required="لطفا وارد کنید">
                            <option value="" selected disabled>-- انتخاب تخصص --</option>
                            @foreach (var expertise in Model.ExpertiseList)
                            {
                                <option value="@expertise.Value" @if(Model.ExpertiseId.ToString() == expertise.Value) {<text>selected</text>}>@expertise.Text</option>
                            }
                        </select>
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>شیفت کاری</label>
                        <input type="text" id="Shift" name="Shift" value="@Model.Shift" class="md-input" />
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-6">
                        <button type="submit" form="editDoctor" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light">ذخیره</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>