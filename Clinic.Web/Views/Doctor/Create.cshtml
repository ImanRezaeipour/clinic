@using System.Security.Policy
@model Clinic.Core.Models.Doctor.DoctorCreateViewModel
@{
    Layout = MVC.Shared.Views.MasterTemplates._Layout; 
    ViewBag.Title = "افزودن پزشک";
    ViewBag.Section = "Doctor";
    ViewBag.Name = "DoctorNew";
}
<form id="newDoctor" action="@Url.Action(MVC.Doctor.Create())" method="post">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-3">
                        <label>کد نظام پزشکی</label>
                        <input type="text" id="MedicalCode" name="MedicalCode" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>نام</label>
                        <input type="text" id="FirstName" name="FirstName" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>نام خانوادگی</label>
                        <input type="text" id="LastName" name="LastName" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>شماره ثابت</label>
                        <input type="text" id="PhoneNumber" name="PhoneNumber" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>شماره همراه</label>
                        <input type="text" id="MobileNumber" name="MobileNumber" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>توضیحات</label>
                        <input type="text" id="Description" name="Description" class="md-input" />
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>تخصص دکتر</label>
                        <select id="ExpertiseId" name="ExpertiseId" data-on-load="prepareExpertiseCombobox" data-val="true" data-val-required="لطفا وارد کنید"></select>
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>شیفت کاری</label>
                        <input type="text" id="Shift" name="Shift" class="md-input" />
                    </div>
                </div>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-6">
                        <button type="submit" form="newDoctor" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light">ذخیره</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
